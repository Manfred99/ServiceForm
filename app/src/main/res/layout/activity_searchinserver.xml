<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".FilesfunctionalitychooserActivity">

    <TextView
        android:id="@+id/txt_SelectAFile"
        android:layout_width="168dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="@string/txt_SelectAFile" />

    <ListView
        android:id="@+id/ls_FilesFTP"
        android:layout_width="368dp"
        android:layout_height="401dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/btn_GoBackMainActivity"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:text="@string/btn_GoBackMainActivity" />
</RelativeLayout>